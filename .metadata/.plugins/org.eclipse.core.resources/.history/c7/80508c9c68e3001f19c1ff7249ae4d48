		employee.Tax = sc.nextDouble();
		System.out.print("\nEmployee: " + employee.toString());
		System.out.print("\nWhich percentage to increase salary? ");
		double percentage = sc.nextDouble();
		employee.IncreaseSalary();
		sc.close();
